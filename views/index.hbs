<ul class="list-group">
  {{#each todos}}
  <li class="list-group-item">
    <div class="row" style="display:flex;justify-content:space-between">
      <div class="col-auto me-auto">
        <input type="checkbox" name="isDone" style="vertical-align: middle" {{#if this.isDone}} checked {{/if}}
          disabled>
        <h4 class="todo-item ms-2" style="display: inline; vertical-align: middle">{{this.name}}</h4>
      </div>

      <div class="col-auto">
        <a class="btn btn-outline-info" href="./todos/{{this._id}}">detail</a>
        <a class="btn btn-outline-success" href="./todos/{{this._id}}/edit">edit</a>
        <form action="/todos/{{this._id}}?_method=DELETE" method="POST" style="display:inline">
          <button class="btn btn-outline-danger" type="submit">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>